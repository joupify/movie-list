<div class="container py-5">
   <div >
   <%# class="d-flex align-items-center justify-content-between" %>
    <h3 class="mb-0">My Lists</h3>
    <h4>List Name: <%= @list.name %></h4>
    <%= @list.movies.count %> movies in the list
  </div>
  <div class="row">
      <%# <h2>Movies:</h2>  %>
      <% @list.movies.each do |movie| %>
        <div class = "col-3 p-3">

          <%= link_to list_path(@list), class:"text-decoration-none" do %>
            <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.poster_url %>)">
              <%= movie.title %>

            </div>
          <% end %>
          <% bookmark = Bookmark.find_by(list_id: @list.id, movie_id: movie.id) %>
          <%= bookmark.comment if bookmark %>
           <%= link_to "delete this list", list_path(@list), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
        </div>
      <% end %>
  </div>

  <h2>Add Movie:</h2>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie, collection: Movie.all %>
    <%= f.input :comment %>
    <%= f.button :submit, 'Add Movie' %>
  <% end %>

  <%= link_to "Back to Lists", lists_path %>

  <%= render "reviews/form", review: @review %>

</div>


<!-- Display flash messages -->
<% flash.each do |key, message| %>
  <div class="<%= key %>"><%= message %></div>
<% end %>
